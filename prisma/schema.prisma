generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  email      String     @unique
  username   String     @unique
  password   String
  state      User_State @default(unavailable)
  role       User_Role  @default(other)
  created_at DateTime   @default(now())
}

model Supplier {
  id         String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  email      String       @unique
  phone      String?
  supplierId String?      @db.Uuid
  Ingredient Ingredient[]
}

model Ingredient {
  id             String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String
  unit           Ingredient_Unit  @default(the)
  supplierId     String?          @db.Uuid
  price          Decimal
  supplier       Supplier?        @relation(fields: [supplierId], references: [id])
  foodIngredient FoodIngredient[]
}

model FoodItem {
  id             String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String
  price          Decimal
  sale_price     Decimal
  img            String?
  description    String?
  create_at      DateTime         @default(now())
  state          Food_State       @default(available)
  category       Food_Cat         @default(other)
  foodIngredient FoodIngredient[]
}

model FoodIngredient {
  food         FoodItem   @relation(fields: [foodId], references: [id])
  foodId       String     @db.Uuid
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId String     @db.Uuid
  amount       Decimal

  @@id([foodId, ingredientId])
}

enum User_State {
  available
  unavailable
  blocked
}

enum User_Role {
  admin
  wh
  sale
  hr
  other
}

enum Ingredient_Unit {
  g
  kg
  l
  ml
  the
}

enum Food_State {
  onsale
  available
  unavailable
}

enum Food_Cat {
  new
  combo4one
  combo4group
  chicken
  carb
  snack
  drink
  desert
  other
}
